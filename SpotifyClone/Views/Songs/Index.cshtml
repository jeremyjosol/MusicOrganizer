@{
    Layout = "_Layout";
}

@model List<SpotifyClone.Models.Song>

<div class="container">
  @if (Model.Count == 0)
  {
    <p>No songs available.</p>
  }
  else
  {
    <ul>
      @foreach (SpotifyClone.Models.Song song in Model)
      {
        <h3>@song.Title</h3>
        <h3>@song.Artist</h3>
        @* <h3>@song.Album</h3> *@
        <h3><img src="@song.AlbumArtworkUrl" alt="album-art"></h3>
      }
    </ul>
  }
@Html.ActionLink("Add new Song", "Create")
</div>
