@{
    Layout = "_Layout";
}

@model SpotifyClone.Models.Song

<h1>Add New Song</h1>
<hr />

<div class="container">
  @using (Html.BeginForm())
  {
    <h4>Track Title</h4>
    @Html.LabelFor(model => model.Title, new { placeholder = "Title" })
    <br />
    <h4>Artist</h4>
    @Html.LabelFor(model => model.Artist, new { placeholder = "Artist" })
    <br />
    <h4>Album</h4>
    @Html.LabelFor(model => model.Album, new { placeholder = "Album" })
    <br />
    <h4>Album Artwork URL</h4>
    @Html.LabelFor(model => model.AlbumArtworkUrl, new { placeholder = "URL" })
    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
  }
</div>
<br />

<div class="container">
  <h5>@Html.ActionLink("Back to Song List", "Index")</h5>
</div>
