@{
  Layout = "_Layout";
}

@model SpotifyClone.Models.Song

<h2>Add Song to Album</h2>

@using (Html.BeginForm("AddSongToAlbum", "AlbumSongs", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Artist, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Artist, new { @class = "form-control"})
    </div>
     <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
        @Html.DropDownListFor(model => @Model.SongId, (SelectList)ViewBag.SongId, "-- Select Song --", new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AlbumId, "Select Album", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.AlbumId, (SelectList)ViewBag.AlbumId, "-- Select Album --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Add Song to Album" class="btn btn-primary" />
    </div>
}

