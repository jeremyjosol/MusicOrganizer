@{
  Layout = "_Layout";
}

    @using SpotifyClone.Models;

    <h1>Albums</h1>

    @if (@Model.Count == 0)
    {
      <h3>No albums have been added yet!</h3>
    } 
    <ul>
    @foreach (Album album in Model)
    {
      <li>@Html.ActionLink($"{album.Title}", "Details", new { id = album.AlbumId })</li>
    }
    </ul>    

    <p><a href='/'>Back home <span class="material-symbols-outlined">
arrow_back
</span></a></p>
